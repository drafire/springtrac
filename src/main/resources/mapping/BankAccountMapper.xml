<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.example.springtrac.dao.UserDao" >
  <resultMap id="BaseResultMap" type="com.example.springtrac.model.User" >
    <id column="id" property="id" jdbcType="INTEGER" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="amount" property="amount" jdbcType="FLOAT" />
  </resultMap>
  <sql id="Base_Column_List" >
    id, amount,name
  </sql>
  <select id="getUser" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
    select 
    <include refid="Base_Column_List" />
    from t_user
    where id = #{id,jdbcType=INTEGER}
  </select>

  <insert id="insert" parameterType="com.example.springtrac.model.User" >
    insert into t_user (id, name,amount)
    values (#{id,jdbcType=INTEGER}, #{name,jdbcType=VARCHAR},#{amount})
  </insert>
  <update id="updateUser" parameterType="com.example.springtrac.model.User" >
    update t_bank_account
    <set >
      <if test="bankAmount != null" >
        bank_amount = #{bankAmount,jdbcType=INTEGER},
      </if>
    </set>
    where bank_id = #{bankId,jdbcType=INTEGER}
  </update>

</mapper>